{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "react",
    "target": "es6",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "declaration": true,
    "lib": ["dom", "es5", "es6", "es7", "scripthost", "es2018.promise"],
    "emitDecoratorMetadata": true,
    "preserveConstEnums": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
  }
}
