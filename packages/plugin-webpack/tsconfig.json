{
  "compilerOptions": {
      "module": "commonjs",
      "target": "es5",
      "outDir": "lib",
      "lib": [
          "es6",
          "dom",
          "es2017.string"
      ],
      "skipLibCheck": true,
      "sourceMap": true,
      "rootDir": "src",
      /* Strict Type-Checking Option */
      "strict": true,   /* enable all strict type-checking options */
      /* Additional Checks */
      "noUnusedLocals": true /* Report errors on unused locals. */
  },
  "exclude": [
      "test",
      "node_modules",
      "lib"
  ]
}